@model IEnumerable<Course>

@{ 
    ViewData["Title"] = "Search result";
}

<h2>Search Result for: @ViewData["search"]</h2>
<div class="top-buffer">
    @{ 
        //check for number of items
        int numItems = Model.Count();
        if (numItems > 0)
        {
            //Display results
            <h4>@numItems total courses</h4>
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="course-listing">
                        <h3>@item.CourseIdTitle</h3>
                        <p>Description would go here...</p>
                        <p>@Html.DisplayFor(m => item.Credits) Credits</p>
                        <a asp-action="Details" asp-route-id="@item.CourseID"
                           class="btn btn-primary">View Details</a>
                    </div>
                </div>
            }
        }
        else
        {
            //No courses found - show alert
            <div class="alert alert-info" role="alert">
                No records matching this search!
            </div>

        }
    }
</div>